@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap");
*,
*::after,
*::before {
  border: 0;
  margin: 0;
  box-sizing: border-box;
}

body {
  background-color: #e6e6e6;
  font-family: "Poppins", sans-serif;
  display: grid;
  place-items: center;
  padding: 2rem;
}